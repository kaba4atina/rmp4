<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainFragment">

    <Button
        android:id="@+id/go_to_list_view_fragment_button"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="@string/listview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/go_to_recycle_view_fragment_button"/>

    <Button
        android:id="@+id/go_to_recycle_view_fragment_button"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="@string/recycleview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/go_to_list_view_fragment_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>